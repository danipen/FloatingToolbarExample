<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FloatingToolbarExample.MainWindow"
        Title="FloatingToolbarExample">
  <Grid RowDefinitions="*,Auto,*">
    <Grid DockPanel.Dock="Top" Grid.Row="0">
      <DockPanel>
        <ScrollBar DockPanel.Dock="Right" AllowAutoHide="False" />
        <ScrollBar Orientation="Horizontal" DockPanel.Dock="Bottom" AllowAutoHide="False"/>
        <Panel Background="Pink"/>
      </DockPanel>
      <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 20 20">
        <Button>+</Button>
        <Button>+</Button>
      </StackPanel>
    </Grid>
    <GridSplitter Grid.Row="1"/>
    <Panel Grid.Row="2" Background="LightBlue" />
  </Grid>
</Window>
